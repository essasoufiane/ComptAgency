{% extends 'base.html.twig' %}

{% block title %}Messages
{% endblock %}

{% block body %}
	<h1>Messages</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Title</th>
				<td>{{ message.title }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ message.message }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_messages_sent') }}">Retour à la boîte d'envoie</a>

