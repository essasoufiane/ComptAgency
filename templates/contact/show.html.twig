{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="titleContact py-3">Message visiteur</h1>
		<hr>
		<div class="d-flex justify-content-around flex-wrap">
			<p>
				<span class="fw-bold">
					Email :</span>
				{{ contact.email }}</p>
			<p>
				<span class="fw-bold">
					Nom :</span>
				{{ contact.name }}</p>
			<p>
				<span class="fw-bold">
					Tél :</span>
				{{ contact.phone }}</p>
		</div>
		<div class="message p-2">
			{{ contact.message|raw }}
		</div>
		<div class="d-flex pt-3">


			<a class="btn btn-primary mr-3" href="{{ path('app_contact_index') }}">Retour à la liste</a>

			{{ include('contact/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
