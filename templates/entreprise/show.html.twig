{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
<div class="container">
    <h1 class="titleContact py-3">Entreprise</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entreprise.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entreprise.name }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ entreprise.status }}</td>
            </tr>
            <tr>
                <th>Siren</th>
                <td>{{ entreprise.siren }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container d-flex">

    <a class="btn btn-primary" href="{{ path('app_entreprise_index') }}">Retour à la liste</a>

    <a class="btn btn-warning mx-4" href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">Éditer</a>

    {{ include('entreprise/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
